  <script>
    document.getElementById("contact-form").addEventListener("submit", function (event) {event.preventDefault();

// Submit the form using fetch
fetch("/send-email", {
  method: "POST",
  body: new FormData(this),
})
  .then((response) => response.text())
  .then((data) => {
    // Display the success message in the designated div
    const message = document.getElementById("messageStatus");
    const successMessage =
      "Thank you for reaching out! Your message has been successfully sent. We'll get back to you as soon as possible.";
    message.innerText = successMessage;
    message.style.display = "block"; // Show the success message

    clearFormInputs();
  })
  .catch((error) => {
    console.error("Error:", error);
    const message = document.getElementById("messageStatus");
    message.innerText =
      "An error occurred while sending the email. Please try again later.";
    message.style.display = "block"; // Show the error message
    clearFormInputs();
  });
});

function clearFormInputs() {
const form = document.getElementById("contact-form"); // Replace with your form ID
const inputs = form.querySelectorAll("input");

inputs.forEach((input) => {
if (input.type !== "submit") {
  input.value = "";
}
});

// Clear the textarea
const textarea = form.querySelector("textarea");
textarea.value = "";
}
    function toggleHiddenRows() {
      const hiddenRows = document.querySelectorAll(".catalog-item.hidden");
      const btn = document.getElementById("full-catalog-button");
      hiddenRows.forEach((item) => {
        if (item.style.display === "none" || item.style.display === "") {
          item.style.display = "block";
          document.getElementById("full-catalog-button").innerHTML =
            "&lt; Close Catalog";
        } else {
          item.style.display = "none";
          const section = document.getElementById("catalog-section");
          section.scrollIntoView({ behavior: "auto" });
